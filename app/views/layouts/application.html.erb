<!DOCTYPE html>
<html>
<head>
  <title>Resummary</title>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Lato|Leckerli+One|Pacifico|ABeeZee' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <style>
  body{
    font-family: 'ABeeZee', sans-serif;

  }
  .fontchange{
    font-family: 'Lato', sans-serif;

  }
  #brand{
    /*font-family: 'Leckerli One', cursive;*/
    font-family: 'Pacifico', cursive;
    font-weight:bolder;
    font-size: 32px;
  }
  h1{
    font-size: 25px;
  }
  </style>
</head>

<body>

  <nav id="custom-bootstrap-menu" class="navbar navbar-default"  style="border:none;">
    <div class="container" style="border:none;">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header page-scroll">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" id="brand" href="/">
          Resummary
        </a></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li class="hidden">
            <a href="#page-top"></a>
          </li>
          <li class="page-scroll">
            <%= link_to 'All Resumary', all_path %>
          </li>
          <% if user_logged_in? %>
          <li class="page-scroll">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              Project <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">


              <li>  <%= link_to 'My Project', projects_path %></li>

              <li>
                <%= link_to 'New Project', new_project_path %>
              </li>

            </ul>
          </li>
          <li class="page-scroll">
            <%= link_to 'Users', users_path  %>
          </li>
          <li class="page-scroll">
            <%= link_to 'My Resume', resume_path %>
          </li>

          <li class="page-scroll">
            <%= link_to "Sign Out",logout_path, method: :delete %>
          </li>

          <li class="page-scroll">
            <%= link_to  current_user.username , edit_user_path(current_user)  %> </li>
            <% else %>
            <% if !(current_page?(login_path)) %>
            <li class="page-scroll">
              <%= link_to "Sign In", login_path %> <li>
                <% end %>

                <% if !(current_page?(signup_path)) %>
                <li class="page-scroll">   <%= link_to "Sign Up", signup_path %> </li>
                <% end %>
                <% end %>


              </ul>
            </div>
            <!-- /.navbar-collapse -->
          </div>
          <!-- /.container-fluid -->
        </nav>






        <!-- flash stores all the notice -->

        <!-- checking if user have logged in, if logged in, shows logout  -->

        <!-- content insertion on yield -->
        <div class="container" >
          <% flash.each do |name, message|%>
          <div class="alert alert-info flash-message flash-message-<%= name %>" role="alert">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>

            <%= message %>
          </div>
          <% end %>
          <div class ="well" style="background-color:rgba(255, 255, 255, 0.73)">

            <%= yield %>
          </div>
        </div>
      </body>
      </html>
