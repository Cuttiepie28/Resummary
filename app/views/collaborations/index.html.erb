<h1>Collaborations</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collaborations.each do |collaboration| %>
      <tr>
        <td><%= collaboration.user.id %></td>
        <td><%= collaboration.project.id %></td>
        <td><%= link_to 'Show',  project_collaboration_path(collaboration.project_id,collaboration.id) %></td>
        <td><%= link_to 'Edit',  edit_project_collaboration_path(collaboration.project_id,collaboration.id) %></td>
        <td><%= link_to 'Destroy', project_collaboration_path(collaboration.project_id,collaboration.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Collaboration', new_project_collaboration_path %>
