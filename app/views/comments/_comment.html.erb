<div class="comment clearfix">
  <div class="comment_content">

    <p class="comment_name">
        <span class="glyphicon glyphicon-pushpin red" aria-hidden="true"></span> <%= comment.name %>
    </p>
    <p>

      <div style="font-weight:bolder;">Comments:</div> <%= comment.body %>
    </p>
    <p class="comment_time">
      <%= time_ago_in_words(comment.created_at) %> Ago
    </p>

  </div>

  <p>
    <%= link_to 'Delete', [comment.project, comment],
          method: :delete,
          class: "button",
          data: { confirm: 'Are you sure?'}
    %>
  </p>


</div>
