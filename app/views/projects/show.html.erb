
<table class="table table-condensed">
  <thead>
    <tr>
      <th>  <div id="Rhead">Project Title:</div></th>
      <th>   <div id="Rhead">Summary:</div> </th>
      <th>   <div id="Rhead">Start year:</div>  </th>
      <th> <div id="Rhead">Start year:</div>  </th>
      <th> <div id="Rhead">Collaborated with:</div>  </th>
      <th> <div id="Rhead">Screenshot of Project:</div>  </th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="tablefonts">
      <tr>
        <td><%= @project.title %></td>
        <td><%= @project.summary %></td>
        <td><%= @project.start_year %></td>
        <td><%= @project.end_year %></td>
        <% @collaborations = Collaboration.where(project_id: @project.id)%>
        <td>  <% @collaborations.each do |collaborator| %>

          <%= link_to collaborator.user.fullname, collaborator.user %><br>
          <% end %>
        </td>
        <td>
<%= image_tag @project.screenshot.url(:thumb) %>
</td>
      </div>


    </tr>
  </table>
  <br><br>
  <div class="row">
    <div class="col-md-4"><%= link_to 'Edit', edit_project_path(@project), class:"btn btn-warning" %>
    </div>
    <div class="col-md-4">
      <center>
        <%= link_to 'Add Collaboration', new_project_collaboration_path(@project) ,class:"btn btn-success" %>
      </center>
    </div>
    <div class="col-md-4"><%= link_to 'Back', projects_path , class:"btn btn-info pull-right"%>
    </div>
  </div>

  <br>
